<form>
  <h1>Roll something {{actor.name}}</h1>
  <p>{{rollSkills}}</p>
  <div class="swnr-space-magic-field-toggles-wrap">
    <label class="swnr-space-magic-field-toggle">
      <input type="radio" class="magic-casting-panel-content-field" name="roll-style" value="2d6"
        {{#swnr-space-magic-if-equals rollType "2d6" }} checked="checked" {{/swnr-space-magic-if-equals}} />
      2d6
    </label>
    <label class="swnr-space-magic-field-toggle">
      <input type="radio" class="magic-casting-panel-content-field" name="roll-style" value="3d6"
        {{#swnr-space-magic-if-equals rollType "3d6" }} checked="checked" {{/swnr-space-magic-if-equals}} />
      3d6
    </label>
    <label class="swnr-space-magic-field-toggle">
      <input type="radio" class="magic-casting-panel-content-field" name="roll-style" value="4d6"
        {{#swnr-space-magic-if-equals rollType "4d6" }} checked="checked" {{/swnr-space-magic-if-equals}} />
      4d6
    </label>
  </div>
  <div class="form-group">
    <label>Total Modifier</label>
    <input type="number" name="mod" value="{{totalMod}}" step="1" />
  </div>
  <button type="submit" class="swnr-mage-btn">Roll</button>
</form>