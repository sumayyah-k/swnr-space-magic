    <div class="meter-group">
      <div class="label roboto-condensed-upper">
        <span>{{localize 'swnr.sheet.hp'}}</span>
      </div>
      <div class="meter sectioned hit-points">
        <div class="progress hit-points" role="meter" aria-valuemin="0"
          aria-valuenow="{{ actor.data.data.health.value }}" aria-valuemax="{{ actor.data.data.health.max }}"
          style="--bar-percentage: min(calc(100% * {{actor.data.data.health.value}}/{{actor.data.data.health.max}}))"
        >
          <div class="label">
            <span class="value">{{ actor.data.data.health.value }}</span>
            <span class="separator">&sol;</span>
            <span class="max">{{ actor.data.data.health.max }}</span>
          </div>
          <div class="progress-controls" hidden>
            <input type="text" name="data.health.value" data-dtype="Number" placeholder="0" value="{{ actor.data.data.health.value }}">
          </div>
        </div>
        <div class="tmp">
          <input type="number" step="1" name="data.health.temp" value="{{actor.data.data.health.temp}}" data-dtype="Number"
            min="0" />
        </div>
      </div>
    </div>

